<html>
    <head>
        <title>Flickr Kittens</title>
        <link href='https://fonts.googleapis.com/css?family=Cuprum' rel='stylesheet' type='text/css'>
        <style2>
            body {
                border: 0;
                background: #444;
            }

            ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            li {
                display: inline-block;
                width:   25%;
            }

            img {
                max-width: 100%;
                height: auto;
            }

            figure {
                margin: 1em;
                overflow: hidden;
                background: #fff;
                padding: .5em .5em .75em .5em;
                font-family: Cuprum, 'Marker Felt', 'Comic Sans', sans-serif;
                font-size: 1.125em;
              -webkit-box-shadow: 0 3px 6px rgba(0,0,0,.25);
              -moz-box-shadow: 0 3px 6px rgba(0,0,0,.25);
                box-shadow: 0 3px 6px rgba(0,0,0,.25);

                -webkit-transform: rotate(-2deg);
              -moz-transform: rotate(-2deg);
                transform: rotate(-2deg);
            }

            li:nth-child(even) figure {
                -webkit-transform: rotate(2deg);
              -moz-transform: rotate(2deg);
                transform: rotate(2deg);
            }

            li:nth-child(3n) figure {
              -webkit-transform: none;
              -moz-transform: none;
              transform: none;
              position: relative;
              top: -.3125rem;
            }

            li:nth-child(5n) figure {
              -webkit-transform: rotate(5deg);
              -moz-transform: rotate(5deg);
              transform: rotate(5deg);
              position: relative;
              right: -.3125rem;
            }

            figcaption {
                padding-top: .25em;
            }
        </style2>
    </head>
    <body>
        <div id="mydiv">
        </div>
    </body>
    <script
        src="https://code.jquery.com/jquery-3.1.1.min.js"
        integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
        crossorigin="anonymous"></script>
    <script src="flickr-fetcher.js"></script>
    <script src="photo-lister.js"></script>
    <script>
      FlickrFetcher.fetchPhotos('8060d4cdac3ceb86af470aae29af3a56', $.getJSON)
          .then(PhotoLister.photoListToHTML)
          .then(function(photosHTML) {
              PhotoLister.addPhotosToElement($, '#mydiv', photosHTML)
          });
    </script
</html>
